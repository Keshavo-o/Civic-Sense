      border-radius: 1rem;
    }
  </style>
</head>
<body class="bg-offwhite text-primary font-sans">

  <!-- Sidebar -->
  <aside id="sidebar"
    class="fixed top-0 left-0 w-64 h-screen bg-white border-r border-gray-200 flex-col justify-between transform -translate-x-full md:translate-x-0 md:flex transition-transform duration-300 z-50">
    <div>
      <div class="p-6 flex items-center space-x-3">
        <img src="/logo.png" class="h-16" alt="logo">
      </div>
      <nav class="mt-8 space-y-2">
        <a href="/user" class="flex items-center px-6 py-3 hover:bg-gray-100 rounded-xl transition">
          ğŸ  <span class="ml-3 font-medium">Home</span>
        </a>
        <a href="/user/reports" class="flex items-center px-6 py-3 hover:bg-gray-100 rounded-xl transition">
          ğŸ“‘ <span class="ml-3 font-medium">Track Reports</span>
        </a>
        <a href="/user/explore" class="flex items-center px-6 py-3 hover:bg-gray-100 rounded-xl transition">
          ğŸŒ <span class="ml-3 font-medium">Explore Issues</span>
        </a>
        <a href="/user/notifications" class="flex items-center px-6 py-3 hover:bg-gray-100 rounded-xl transition">
          ğŸ”” <span class="ml-3 font-medium">Notifications</span>
        </a>
        <a href="/user/profile" class="flex items-center px-6 py-3 hover:bg-gray-100 rounded-xl transition">
          ğŸ‘¤ <span class="ml-3 font-medium">Profile</span>
        </a>
      </nav>
    </div>
    <div class="p-6">
      <a href="/user/submit_report" 
         class="w-full block text-center px-6 py-3 bg-accent text-white font-semibold rounded-full hover:bg-orange-600 transition">
        â• Report Issue
      </a>
    </div>
  </aside>

  <!-- Overlay -->
  <div id="overlay" class="fixed inset-0 bg-black bg-opacity-40 hidden z-40 md:hidden"></div>

  <!-- Main + Right Side -->
  <div class="md:ml-64 flex flex-col lg:flex-row">
    <!-- Main Content -->
    <main class="flex-1 p-4 sm:p-6 lg:p-8 max-w-2xl mx-auto lg:mx-0">
      <!-- Header -->
      <header class="flex justify-between items-center mb-6">
        <button id="menuBtn" class="md:hidden w-10 h-10 rounded-full bg-brand text-white flex items-center justify-center font-bold">
          <% if(user && user.username) { %><%= user.username.charAt(0).toUpperCase() %><% } else { %>U<% } %>
        </button>

        <h1 class="text-xl sm:text-2xl font-bold flex-1 text-center md:text-left">
           &nbsp Hello, <% if(user) { %><%= user.username %><% } %> ğŸ‘‹
        </h1>

        <button class="hidden md:block px-4 py-2 bg-brand text-white rounded-full hover:bg-brand-light transition text-sm sm:text-base">
          Settings
        </button>
      </header>


      <!-- Notifications -->
       <!-- Notifications Feed -->
<section class="space-y-4">
  <h2 class="text-lg sm:text-xl font-bold mb-4">Your Notifications</h2>

  <% if (user && user.notifications && user.notifications.length > 0) { %>
    <% user.notifications.slice().reverse().forEach(function(notification, index) { %>
      <div class="group relative bg-white border border-gray-200 rounded-2xl shadow-sm hover:shadow-xl transition-all duration-300 p-4 flex justify-between items-center hover:border-accent">
        
        <!-- Notification Text -->
        <p class="text-sm sm:text-base text-gray-800 group-hover:text-primary transition-colors duration-300">
          <%= notification %>
        </p>

        <!-- Delete Button -->
        <form action="/user/notifications/delete/<%= user.notifications.length - 1 - index %>" method="POST" class="ml-4">
          <button type="submit" 
            class="opacity-70 group-hover:opacity-100 text-gray-500 hover:text-red-600 transition-colors duration-300">
            ğŸ—‘ï¸
          </button>
        </form>

        <!-- Cool Hover Glow -->
        <div class="absolute inset-0 rounded-2xl border-2 border-transparent group-hover:border-accent/60 pointer-events-none transition-all duration-300"></div>
      </div>
    <% }); %>
  <% } else { %>
    <p class="text-gray-500 text-sm sm:text-base italic">No notifications yet ğŸ‰</p>
  <% } %>
</section>






  <!-- Bottom Nav -->
  <nav class="md:hidden fixed bottom-0 left-0 right-0 bg-white border-t border-gray-200 flex justify-around items-center py-2 shadow-lg z-30">
    <a href="/user" class="flex flex-col items-center text-sm text-gray-600 hover:text-accent">ğŸ <span>Home</span></a>
    <a href="/user/explore" class="flex flex-col items-center text-sm text-gray-600 hover:text-accent">ğŸŒ<span>Explore</span></a>
    <a href="/user/submit_report" class="flex items-center justify-center w-12 h-12 bg-accent text-white rounded-full -mt-8 shadow-lg hover:bg-orange-600">â•</a>
    <a href="/user/notifications" class="flex flex-col items-center text-sm text-gray-600 hover:text-accent">ğŸ””<span>Alerts</span></a>
    <a href="/user/profile" class="flex flex-col items-center text-sm text-gray-600 hover:text-accent">ğŸ‘¤<span>Profile</span></a>
  </nav>



</body>
</html>
