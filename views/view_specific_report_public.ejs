<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>JanSetu | Post View</title>
  <script src="https://cdn.tailwindcss.com"></script>
  <script>
    tailwind.config = {
      theme: {
        extend: {
          colors: {
            primary: '#111111',
            accent: '#f97316',
            offwhite: '#f5f5f5',
            brand: '#1c1c1c',
            'brand-light': '#383838'
          },
          fontFamily: {
            sans: ['Inter', 'sans-serif'],
          }
        }
      }
    }
  </script>
</head>
<body class="bg-offwhite text-primary font-sans">

  <!-- Sidebar -->
  <aside id="sidebar"
    class="fixed top-0 left-0 w-64 h-screen bg-white border-r border-gray-200 flex-col justify-between transform -translate-x-full md:translate-x-0 md:flex transition-transform duration-300 z-50">
    <div>
      <div class="p-6 flex items-center space-x-3">
        <img src="/logo.png" class="h-16" alt="logo">
      </div>
      <nav class="mt-8 space-y-2">
        <a href="/user" class="flex items-center px-6 py-3 hover:bg-gray-100 rounded-xl transition">
          🏠 <span class="ml-3 font-medium">Home</span>
        </a>
        <a href="/reports" class="flex items-center px-6 py-3 hover:bg-gray-100 rounded-xl transition">
          📑 <span class="ml-3 font-medium">Track Reports</span>
        </a>
        <a href="/explore" class="flex items-center px-6 py-3 hover:bg-gray-100 rounded-xl transition">
          🌍 <span class="ml-3 font-medium">Explore Issues</span>
        </a>
        <a href="/notifications" class="flex items-center px-6 py-3 hover:bg-gray-100 rounded-xl transition">
          🔔 <span class="ml-3 font-medium">Notifications</span>
        </a>
        <a href="/user/profile" class="flex items-center px-6 py-3 hover:bg-gray-100 rounded-xl transition">
          👤 <span class="ml-3 font-medium">Profile</span>
        </a>
      </nav>
    </div>
    <div class="p-6">
      <a href="/user/submit_report" 
         class="w-full block text-center px-6 py-3 bg-accent text-white font-semibold rounded-full hover:bg-orange-600 transition">
        ➕ Report Issue
      </a>
    </div>
  </aside>
  <!-- Overlay -->
  <div id="overlay" class="fixed inset-0 bg-black bg-opacity-40 hidden z-40 md:hidden"></div>

  <!-- Main + Right -->
  <div class="md:ml-64 flex flex-col lg:flex-row">
    <!-- Main Content -->
    <main class="flex-1 p-4 sm:p-6 lg:p-8 max-w-2xl mx-auto lg:mx-0">
      
      <!-- Back Button -->
      <div class="flex items-center space-x-3 mb-4">
        <a href="/user" class="flex items-center text-accent hover:underline">
          ← Back
        </a>
      </div>

      <!-- Post Card -->
      <div class="bg-white rounded-2xl shadow p-6 mb-6">
        <div class="flex items-center space-x-3 mb-3">
          <div class="w-12 h-12 rounded-full bg-brand text-white flex items-center justify-center font-bold text-lg">
            <% if(post.user && post.user.username) { %>
              <%= post.user.username.charAt(0).toUpperCase() %>
            <% } %>
          </div>
          <div>
            <h4 class="font-semibold"><%= post.user.username %></h4>
            <p class="text-sm text-gray-500">@<%= post.user._id %></p>
          </div>
        </div>

        <p class="text-lg text-gray-900 mb-4"><%= post.text %></p>

        
          <div class="mb-4">
            <img src="" class="w-full max-h-[30rem] object-cover rounded-lg">
          </div>
        

        <div class="flex justify-between text-gray-500 text-sm border-t border-gray-200 pt-3">
          <button class="hover:text-accent">💬 <%= post.comments.length %> Comments</button>
          <button class="hover:text-accent">🔁 Repost</button>
          <a href="/posts/<%= post._id %>/like"><button class="hover:text-accent">❤️ <%= post.likes %></button></a>
          <button class="hover:text-accent">📤 Share</button>
        </div>
      </div>

      <!-- Comment Composer -->
      <div class="bg-white rounded-2xl shadow p-4 sm:p-6 mb-6">
        <form action="/posts/<%= post._id %>/comment" method="POST">
          <textarea 
            name="comment" 
            rows="2" 
            placeholder="Write a comment..." 
            class="w-full p-3 border border-gray-200 rounded-xl focus:ring-2 focus:ring-accent focus:outline-none resize-none"></textarea>
          <div class="flex justify-end mt-3">
            <button type="submit" class="px-6 py-2 bg-accent text-white rounded-full hover:bg-orange-600 transition">Comment</button>
          </div>
        </form>
      </div>

      <!-- Comments List -->
      <section class="space-y-4">
  <% if (post.comments.length > 0) { %>
    <% post.comments.forEach(function(comment) { %>
      <div class="bg-white rounded-xl shadow p-4">
        <div class="flex items-center space-x-3 mb-2">
          <div class="w-8 h-8 rounded-full bg-brand text-white flex items-center justify-center font-bold text-sm">
            <% if(comment.user && comment.name) { %>
              <%= comment.name.charAt(0).toUpperCase() %>
            <% } else { %>
              U
            <% } %>
          </div>
          <h5 class="font-semibold">
            <%= (comment.user && comment.name) ? comment.name : "Unknown" %>
          </h5>
        </div>
        <p class="text-gray-700"><%= comment.text %></p>
      </div>
    <% }); %>
  <% } else { %>
    <p class="text-gray-500">No comments yet. Be the first to comment!</p>
  <% } %>
</section>


    </main>


   <!-- Bottom Nav -->
  <nav class="md:hidden fixed bottom-0 left-0 right-0 bg-white border-t border-gray-200 flex justify-around items-center py-2 shadow-lg z-30">
    <a href="/user" class="flex flex-col items-center text-sm text-gray-600 hover:text-accent">🏠<span>Home</span></a>
    <a href="/explore" class="flex flex-col items-center text-sm text-gray-600 hover:text-accent">🌍<span>Explore</span></a>
    <a href="/user/submit_report" class="flex items-center justify-center w-12 h-12 bg-accent text-white rounded-full -mt-8 shadow-lg hover:bg-orange-600">➕</a>
    <a href="/notifications" class="flex flex-col items-center text-sm text-gray-600 hover:text-accent">🔔<span>Alerts</span></a>
    <a href="/user/profile" class="flex flex-col items-center text-sm text-gray-600 hover:text-accent">👤<span>Profile</span></a>
  </nav>


</body>
</html>
