    <footer id="contact" class="bg-brand text-white py-12">
        <div class="max-w-7xl mx-auto text-center px-6">
            <h4 class="text-2xl font-bold mb-4">Get in Touch</h4>
            <p class="mb-6 text-gray-300">Contact us at <a href="mailto:info@jansetu.gov.in" class="underline hover:text-accent transition">info@jansetu.gov.in</a></p>
            <p class="text-sm text-gray-400">¬© 2025 Government of India | JanSetu Initiative | All Rights Reserved</p>
        </div>
    </footer>

    <script>
        const btn = document.getElementById('menu-btn');
        const menu = document.getElementById('mobile-menu');
        const menuIcon = document.getElementById('menu-icon');

        btn.addEventListener('click', () => {
            menu.classList.toggle('hidden');
            if (menu.classList.contains('hidden')) {
                menuIcon.textContent = '‚ò∞';
            } else {
                menuIcon.textContent = '‚úï';
